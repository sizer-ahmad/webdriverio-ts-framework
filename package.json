{
  "devDependencies": {
    "@wdio/allure-reporter": "^9.1.3",
    "@wdio/cli": "^9.2.1",
    "@wdio/local-runner": "^9.2.1",
    "@wdio/mocha-framework": "^9.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "winston": "^3.15.0"
  },
  "scripts": {
    "wdio": "wdio run ./wdio.conf.ts",
    "generate-report": "allure generate --clean ./reports/allure-results -o ./reports/allure-report",
    "open-report": "allure open ./reports/allure-report",
    "start": "npm run wdio || true && npm run generate-report && npm run open-report"
  },
  "dependencies": {
    "allure-commandline": "^2.30.0",
    "expect": "^29.7.0",
    "expect-webdriverio": "^5.0.3"
  }
}
