{
  "devDependencies": {
    "@wdio/allure-reporter": "^9.1.3",
    "@wdio/cli": "^9.2.1",
    "@wdio/local-runner": "^9.2.1",
    "@wdio/mocha-framework": "^9.1.3",
    "cross-env": "^7.0.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "winston": "^3.15.0"
  },
  "scripts": {
    "clean-reports": "rimraf ./reports",
    "wdio": "cross-env suppress-exit-code wdio run ./wdio.conf.ts",
    "generate-report": "allure generate ./reports/allure-results -o ./reports/allure-report",
    "open-report": "allure open ./reports/allure-report",
    "start": "npm run clean-reports && npm run wdio && npm run generate-report && npm run open-report"
  },
  "dependencies": {
    "allure-commandline": "^2.30.0",
    "expect": "^29.7.0",
    "expect-webdriverio": "^5.0.3",
    "suppress-exit-code": "^3.2.0"
  }
}
